#!/usr/bin/env node
var debug = require('debug')('revoList'),
    app = require('../app'),
    colors = require('colors');

app.set('port', process.env.PORT || 3000);

var server = app.listen(app.get('port'), function() {
  debug('Express server listening on port ' + server.address().port);

  console.info(('revoList started on port ' + server.address().port + ' and waiting for incoming requests.').toString().green);
  console.info('Terminate this process to shutdown revoList.'.yellow);
});
